#Função type() mostra o tipo da variável
#Ctrl + k + c comenta a linha selecionada
# Ctrl + k + u descomenta a linha selecionada
print(type(media))
print(type(nome))
print(type(n1))
print(type(estado))

#Função isinstance() verifica se a variável é do tipo especificado
print(isinstance(idade, int))
print(isinstance(nome, str))
print(isinstance(a, str))

#While

num = 1

while (num <= 10):
    print(num)
    num += 1
print("Laço encerrado.")

nome = None

while True:
    print("Digite seu nome (ou 'x' para encerrar): ")
    nome = input()
    if nome == 'x' or nome =='X':
        break
    print(f"Olá, {nome}!")
print("Até logo!")

# Condicionais

# simples, composto, encadeado

n1 = float(input("Digite a nota 1: "))
n2 = float(input("Digite a nota 2: "))
media = (n1 + n2) / 2
if media >=7:
    print("Resultado: Aprovado")
elif media >=5 and media <7:
    print("Resultado: Recuperação")
else:
    print("Resultado: Reprovado")

print("Sua Média é {}".format(media))


# For

lista = [1, 2, 3, 4, 5]

for item in lista:
    print(f"Item da lista: {item}")

palavra = "Python"

for letra in palavra:
    print(f"Letra: {letra}")    

for numero in range(1, 11): #gera até n-1
    print(f"Número atual: {numero}")

nome = input('Digite seu nome: ')
for x in range(10): #pra mostar até 10, na hora de imprimir, soma mais 1
    print(f"{x+1} - Olá, {nome}!")

range(valor_inicial, valor_final, incremento)
for x in range(2,20,2):
    print(x)

for x in range(5,0,-1):
    print(x)

pedras = ("ametista", "quartzo rosa", "jade", "turmalina", "ágata")
for pedra in pedras:
    if pedra == "quartzo rosa":
        continue
    print(pedra)
